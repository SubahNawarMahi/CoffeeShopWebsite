@model List<CoffeeShopProject.Models.BookTableTbl>
@{  
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}


<head>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
    <link href="~/menu/css/all.min.css" rel="stylesheet" />
    <link href="~/menu/css/templatemo-style.css" rel="stylesheet" />
    <style>




        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
            border: none;
        }

            .card button {
                border: none;
                outline: 0;
                padding: 12px;
                color: white;
                background-color: #000;
                text-align: center;
                cursor: pointer;
                width: 100%;
                font-size: 18px;
            }

                .card button:hover {
                    opacity: 0.7;
                }
    </style>
</head>

<div class="container" style="margin-top:100px">

    <h2>Show Table Booking Requests</h2>


    <div class="tm-gallery-page">

        @foreach (var item in Model)
        {
            <article class="col-lg-3 col-md-4 col-sm-6 col-12 tm-gallery-item" style="margin-bottom:20px">
                <figure>

                    <figcaption>

                        <div class="card" style="padding:15px;background-color:white">
                            <h3 class="tm-gallery-title"><b><u>Table Info</u></b></h3>
                            <h4 class="tm-gallery-title">Day-<span style="color: deeppink">@item.Day</span></h4>
                            @{
                                int time = Int32.Parse(item.Hours);
                                string x = "";
                            }

                            @if (time >= 12)
                            {
                                x += "PM";
                            }
                            else
                            {
                                x += "AM";
                            }

                            <h4 class="tm-gallery-title">Time-<span style="color: deeppink">@item.Hours @x</span></h4>
                            <h4 class="tm-gallery-title">Status-<span style="color:deeppink">@item.Status</span></h4>

                            <div style="display:flex;margin-top:30px">
                                <div style="float:left;margin-right:20px">
                                    <form action="/Home/CancelTable" method="Post">
                                        <input type="hidden" name="Id" id="Id" value="@item.Id" />
                                        <input type="hidden" name="UserId" id="UserId" value="@item.UserId" />
                                        <div class="card" style="width:100px;">
                                            <input type="submit" value="Cancel" style="border-color:white;font-weight:400;width:100%;padding:10px" />
                                        </div>
                                    </form>
                                </div>
                                <div style="float: left; margin-left:10px;margin-right:10px">

                                    <form action="/Home/DeleteTable" method="Post">
                                        <input type="hidden" name="Id" id="Id" value="@item.Id" />
                                        <input type="hidden" name="UserId" id="UserId" value="@item.UserId" />
                                        <div class="card" style="width:100px;">
                                            <input type="submit" value="Delete" style="border-color: white; font-weight: 400;width:100%; padding: 10px" />
                                        </div>
                                    </form>

                                    @*<p style="text-align: center; text-decoration-style: none;text-decoration:none;">@Html.ActionLink("Delete", "DeleteCart", new { id = item.Id }, null)</p>*@
                                </div>
                            </div>

                        </div>
                    </figcaption>
                </figure>
            </article>
        }

    </div>

</div>