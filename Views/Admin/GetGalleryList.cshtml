@model IEnumerable<CoffeeShopProject.Models.GalleryTable>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top:50px">
    <h2>GetGalleryList</h2>

    <p>
        @Html.ActionLink("Create New", "AddGalleryImage")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.Path)" width="250" height="100" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditGalleryImage", new { id = item.Id }) |
                    @Html.ActionLink("Details", "GetGalleryImage", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>