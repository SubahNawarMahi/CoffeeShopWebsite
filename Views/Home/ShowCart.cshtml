@model List<CoffeeShopProject.Models.CartTable>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<head>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
    <link href="~/menu/css/all.min.css" rel="stylesheet" />
    <link href="~/menu/css/templatemo-style.css" rel="stylesheet" />
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 40%;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
            border: none;
        }

            .card button {
                border: none;
                outline: 0;
                padding: 12px;
                color: white;
                background-color: #fff;
                text-align: center;
                cursor: pointer;
                width: 100%;
                font-size: 18px;
            }

                .card button:hover {
                    opacity: 0.7;
                }

        .container {
            padding: 2px 16px;
        }
    </style>
</head>

<div class="container" style="margin-top:50px" >
    @*<h3>Total Price = @Request.Cookies["total1"].Value</h3>
        <h4>Quantity =  @Request.Cookies["quantity1"].Value</h4>*@
    <h1 style="display:inline-block">Quantity: @TempData["quantity1"]</h1>
    <h1 style="display:inline-block">Total Price: @TempData["total1"]</h1>

</div>
<div class="row tm-gallery" style="margin-top:30px">

    <div class="tm-gallery-page">

        @foreach (var item in Model)
        {

            <article class="col-lg-3 col-md-4 col-sm-6 col-12 tm-gallery-item" style="margin-bottom:20px">
                <figure>
                    <img src="@Url.Content(item.Path)" alt="Image" class="img-fluid tm-gallery-img" />
                    <figcaption>
                        <h4 class="tm-gallery-title">@item.Title</h4>
                        <p class="tm-gallery-description">@item.Category <span style="visibility:hidden"> dgjdgjdgsdjfdddddddddddddddddddddddddddddddddddgjdsgjgdkjkljgjklfhdfgsssdfg</span></p>
                        <p class="tm-gallery-price">@item.Price</p>
                        <p class="tm-gallery-price">Quantity:@item.Quantity</p>

                        <p>@item.Status</p>
                        <div style="display:flex">
                            <div style="float:left;margin-right:20px">
                                <form action="/Home/CancelCart" method="Post">
                                    <input type="hidden" name="Id" id="Id" value="@item.MenuId" />
                                    <div class="card" style="width:100px;">
                                        <input type="submit" value="Cancel" style="border-color:white;width:100%;padding:10px" />
                                    </div>
                                </form>
                            </div>
                            <div style="float: left; margin-left:20px">

                                <form action="/Home/DeleteCart" method="Post">
                                    <input type="hidden" name="Id" id="Id" value="@item.MenuId" />
                                    <div class="card" style="width:100px;">
                                        <input type="submit" value="Delete" style="border-color:white;width:100%;padding:10px" />
                                    </div>
                                </form>

                                @*<p style="text-align: center; text-decoration-style: none;text-decoration:none;">@Html.ActionLink("Delete", "DeleteCart", new { id = item.Id }, null)</p>*@
                            </div>
                        </div>

                    </figcaption>
                </figure>
            </article>
        }
        @*<hr />*@
        @*<h1>Total=@Request.Cookies["total"]</h1>
            <h1>Quantity=@Request.Cookies["quantity"]</h1>*@
        <!--@if (Request.Cookies["mes"] != null)
        {
            <script>
                    alert("@Request.Cookies["mes"].Value");
            </script>


        }-->
        @*@if (Request.Cookies["mes2"].Value == "Item order Canceled")
            {
                <script>
                        alert("@Request.Cookies["mes2"].Value");
                </script>


            }*@




    </div>
</div>

