<section class="banner" style="margin-top:50px">
    <h2 style="text-align:center;font-family:'Times New Roman', Times, serif;font-style:italic;color:black;font-weight:400;font-size:40px"> <span style="text-align:center;font-family:'Monotype Corsiva';font-style:oblique;color:red;font-weight:400;font-size:40px">Contact Us</span></h2>
    <div class="card-container " style="background-color: #F7F7F7;display:flex; flex: 2 1; padding: 2em ">
        <div class="container"style="float:left;margin-right:250px;width:50%;padding-left:10px">
            <!-- image here -->
            <!--<img src="~/projectImages/reservation.jpg" style="width:90%; height:100%" />-->
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3677.7673066007815!2d89.56505461496394!3d22.811084585060474!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39ff91ec55c66c41%3A0xb64e0d81e60bc221!2z4KaV4Kar4Ka_4Kak4Ka-IC0gQ29mZmVldGFhYQ!5e0!3m2!1sen!2sbd!4v1658295260274!5m2!1sen!2sbd" width="700" height="550" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <div class="container" style="float:right;padding-right:10px ;width:50%">
            <div style="height:300px">
                <h2 style="font-family:'Times New Roman','Times New Roman', Times, serif;font-weight:400;text-align:justify">Contact Us</h2>

                @using (Html.BeginForm("Contact","Home"))
                {
                    <div class="form-row">
                       
                        <input type="text" name="FullName" placeholder="Full Name" style="width: 100%; padding: 12px; /* Some padding */ border: 1px solid #ccc; /* Gray border */ border-radius: 4px; /* Rounded borders */ box-sizing: border-box; /* Make sure that padding and width stays in place */ margin-top: 6px; /* Add a top margin */ margin-bottom: 16px; /* Bottom margin */ resize: vertical">

                    </div>
                    <div class="form-row">
                        <input type="text" name="PhoneNo"  placeholder="Phone Number" style="width: 100%; padding: 12px; /* Some padding */ border: 1px solid #ccc; /* Gray border */ border-radius: 4px; /* Rounded borders */ box-sizing: border-box; /* Make sure that padding and width stays in place */ margin-top: 6px; /* Add a top margin */ margin-bottom: 16px; /* Bottom margin */ resize: vertical">
                    </div>
                    <div class="form-row">
                        <input type="email" name="Email"  placeholder="Your Email" style="width: 100%; padding: 12px; /* Some padding */ border: 1px solid #ccc; /* Gray border */ border-radius: 4px; /* Rounded borders */ box-sizing: border-box; /* Make sure that padding and width stays in place */ margin-top: 6px; /* Add a top margin */ margin-bottom: 16px; /* Bottom margin */ resize: vertical">
                    </div>

                    <div class="form-row">
                        <input type="text" name="Feedback" placeholder="Your Feedback" style="width: 100%;height: 150px;padding: 12px 20px;margin-bottom:10px;box-sizing: border-box;border: 2px solid #ccc; border-radius: 4px;background-color: #f8f8f8;resize: none;">

                    </div>
                    
                    
                    <button type="submit" style=" font-size:20px;font-weight:400;font-family:'Times New Roman', Times, serif;background-color:red;border:0;color:#fff;border-radius:50px;padding:14px 60px;transition:0.4s;">Send Message</button>
                   
                    
                     <h4 style="text-align:center;padding-top:5px"> @ViewBag.feedback</h4>
                   
                }


            </div>

        </div>
    </div>
</section>



